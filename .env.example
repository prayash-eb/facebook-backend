# Server Configuration
PORT = 5000
BASE_URL = http://localhost
NODE_ENV = development

# Database Configuration
DATABASE_URL_LOCAL = mongodb://localhost:27017/your-database-name
DATABASE_URL_REMOTE = mongodb+srv://username:password@cluster.mongodb.net/?appName=yourapp

# JWT Configuration
JWT_SECRET = your-super-secret-jwt-key-change-this-in-production

# Cloudinary Configuration (for media uploads)
CLOUDINARY_CLOUD_NAME = your-cloudinary-cloud-name
CLOUDINARY_API_KEY = your-cloudinary-api-key
CLOUDINARY_API_SECRET = your-cloudinary-api-secret

# Logging Configuration
# Set to 'true' to enable file logging in development mode
ENABLE_FILE_LOGGING = true
